{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -m -i ./app/styles/app.css -o ./app/app.css",
    "dev": "concurrently \"npm run dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -w -i ./app/styles/app.css -o ./app/app.css",
    "test": "echo test",
    "lint": "eslint app",
    "typecheck": "tsc -b",
    "prepare": "husky install"
  },
  "dependencies": {
    "@remix-run/node": "^1.10.1",
    "@remix-run/react": "^1.10.1",
    "@remix-run/vercel": "^1.10.1",
    "@vercel/node": "^2.6.2",
    "classnames": "^2.3.2",
    "lint-staged": "^13.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@remix-run/dev": "^1.10.1",
    "@remix-run/eslint-config": "^1.10.1",
    "@remix-run/serve": "^1.10.1",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "commitizen": "^4.2.6",
    "concurrently": "^7.6.0",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^9.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "git-cz": "^4.9.0",
    "husky": "^8.0.3",
    "prettier": "^2.8.3",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.9.4"
  },
  "engines": {
    "node": ">=14"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "lint-staged": {
    "src/**/*": [
      "npm run lint --fix"
    ]
  }
}
